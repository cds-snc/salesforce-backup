// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "salesforce-backup",
	"image": "mcr.microsoft.com/devcontainers/python:3.13@sha256:11690b54090a0a649321728d5f278288b3bab1b45c37218a715ee63f5716e546",
	"remoteEnv": {
		"PATH": "/home/vscode/.local/bin:${containerEnv:PATH}" // give our installed Python modules precedence
	},
	"features": {
		"ghcr.io/devcontainers/features/terraform": {
			"version": "1.4.6",
			"terragrunt": "0.45.14"

		},
		"ghcr.io/devcontainers/features/aws-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/github-cli:1": {
			"version": "latest"
		},
		"ghcr.io/christophermacgown/devcontainer-features/direnv:1": {
			"autoEnable": true,
			"version": "latest"
		},
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"github.vscode-github-actions"
			]
		}
	},
	"containerEnv": {
		"LOG_LEVEL": "INFO",
		"POWERTOOLS_SERVICE_NAME": "data-extractor",
		"EDITOR": "vim"
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "make postCreateCommand"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}